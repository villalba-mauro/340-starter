<% if (title) { %>
<h1><%= title %></h1>

<!-- Mostrar mensajes flash si existen -->
<div class="pop-up"><%- messages() %></div>

<!-- Mostrar errores si existen -->
<% if (errors) { %>
<div class="error-messages">
  <% errors.array().forEach(error => { %>
    <p class="error"><%= error.msg %></p>
  <% }) %>
</div>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<!-- ✅ TASK 3: Enlace de actualización para TODOS los usuarios -->
<p><a class="link" href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>

<% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Manage Inventory</a></p>
<% } %>

<!-- Contenido principal de la gestión de cuenta -->
<div class="account-management">
  <div class="welcome-message">
    <p>You're logged in</p>
  </div>
  
  <!-- Área para futuras funcionalidades de gestión de cuenta -->
  <div class="account-actions">
    <!-- Aquí puedes agregar enlaces para editar perfil, cambiar contraseña, etc. -->
  </div>
</div>

<% } else { res.redirect('/') } %>