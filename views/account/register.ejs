<% if (title) { %>
<h1><%= title %></h1>
<div class="pop-up"><%- messages() %></div>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<div class="form-container" id="register-container">
  <form class="form" action="/account/register" method="post">
    <span>ALL FIELDS ARE REQUIRED</span>
    <br />
    <div class="flex-column">
      <label>First Name </label>
    </div>
    <div class="inputForm">
      <input
        type="text"
        class="input"
        id="accountFirstname"
        name="account_firstname"
        placeholder="Enter your First Name"
        required
        value="<%= locals.account_firstname %>"
      />
    </div>
    <div class="flex-column">
      <label>Last Name </label>
    </div>
    <div class="inputForm">
      <input
        type="text"
        class="input"
        name="account_lastname"
        placeholder="Enter your Last Name"
        required
      />
    </div>
    <div class="flex-column">
      <label>Email</label>
    </div>
    <div class="inputForm">
      <input
        type="email"
        class="input"
        name="account_email"
        placeholder="Enter your Email"
        required
      />
    </div>
    <div class="flex-column">
      <label>Password</label>
    </div>
    <div class="inputForm">
      <input
        type="password"
        class="input"
        name="account_password"
        id="pword"
        placeholder="Create your Password"
        pattern="(?=.*\d)(?=.*[A-Z])(?=.*\W).{12,}"
        title="Password must be 12 characters or more, and contain at least one uppercase letter, one number, and one special character."
        required
      />
      <svg
        id="password-btn"
        viewBox="0 0 576 512"
        height="1em"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"
        ></path>
      </svg>
    </div>
    <span
      >Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character</span
    >
    <button type="submit" class="button-submit">Register</button>
    <p class="p">
      Already have an account? <a class="span" href="/account/login">Log In</a>
    </p>
  </form>
</div>
<script src="/js/account.js"></script>
<% } else { res.redirect('/') }%>
